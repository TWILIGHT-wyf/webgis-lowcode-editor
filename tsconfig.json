{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@vela/core": ["packages/core/src"],
      "@vela/core/*": ["packages/core/src/*"],
      "@vela/ui": ["packages/ui"],
      "@vela/ui/*": ["packages/ui/*"],
      "@vela/materials": ["packages/materials/src"],
      "@vela/materials/*": ["packages/materials/src/*"],
      "@vela/renderer": ["packages/renderer/src"],
      "@vela/renderer/*": ["packages/renderer/src/*"],
      "@vela/generator": ["packages/generator/src"],
      "@vela/generator/*": ["packages/generator/src/*"],
      "@vela/editor": ["packages/editor/src"],
      "@vela/editor/*": ["packages/editor/src/*"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/ui" },
    { "path": "./packages/materials" },
    { "path": "./packages/renderer" },
    { "path": "./packages/generator" },
    { "path": "./packages/editor" }
  ],
  "exclude": ["node_modules", "dist", "**/node_modules", "**/dist"]
}
